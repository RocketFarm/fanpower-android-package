<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/black_rounded_not_filled"
        android:paddingTop="3.5dp"
        android:paddingBottom="3.5dp">


        <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_alignTop="@+id/title"
            android:layout_alignBottom="@+id/title"
            android:layout_marginEnd="4dp"
            android:elevation="0dp"
            android:backgroundTint="@color/transparent">

            <View
                android:id="@+id/percentageProgressView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/answer_list_percentage_grey"
                android:translationX="-40dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/percentage"
            android:fontFamily="@font/outfit_semibold"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="test"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/outfit_bold"
            android:text="10%"
            android:textColor="@color/answer_list_grey_percentage_text"
            android:textSize="14dp"
            android:visibility="gone" />

    </RelativeLayout>


</RelativeLayout>